@model IEnumerable<Cuida_.Models.Usuarios.Medico>

    @{
    ViewData["Title"] = "Cadastrar médico";
    Layout = null;
    }

    @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
    @if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

    <!DOCTYPE html>
    <html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

        <style>
            body {
                background: #f5f5f5;
                font-family: 'Segoe UI', Arial, sans-serif;
                padding: 30px;
            }

            h1 {
                font-weight: 700;
                font-size: 1.8rem;
                margin-bottom: 30px;
            }

            .flex-end {
                justify-content: flex-end;
            }

            .top-bar {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 25px;
            }

            .btn-add {
                background-color: #28a745;
                color: white;
                border: none;
                border-radius: 6px;
                padding: 8px 14px;
                display: flex;
                align-items: center;
                gap: 6px;
                font-weight: 500;
            }

                .btn-add:hover {
                    opacity: 0.9;
                }

            .card-medico {
                border: none;
                border-radius: 10px;
                box-shadow: 0 1px 4px rgba(0,0,0,0.1);
                background: white;
                padding: 15px;
                transition: transform 0.2s;
            }

                .card-medico:hover {
                    transform: scale(1.02);
                }

                .card-medico h5 {
                    font-weight: 600;
                }

            .btn-edit, .btn-delete {
                border: none;
                border-radius: 5px;
                padding: 6px 10px;
            }

            .btn-edit {
                background: #007bff;
                color: white;
                height: 40px;
                width: 40px;
            }

            .btn-delete {
                background: #dc3545;
                color: white;
                height: 40px;
                width: 40px;
            }

            @@media (max-width: 768px) {
                body {
                    padding: 20px;
                }

                .top-bar h1 {
                    font-size: 1.5rem;
                }

                .top-bar {
                    flex-direction: column;
                }
            }
        </style>
    </head>
    <body>

        <div class="container-fluid">
            <div class="top-bar">
                <h1>Cadastrar médico</h1>
                <button class="btn-add" data-bs-toggle="modal" data-bs-target="#modalCadastrar">
                    <i class="bi bi-plus-lg"></i> Novo(a) médico
                </button>
            </div>

            <div class="row g-3">
                @foreach (var medico in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card-medico">
                        <h5>@medico.Nome</h5>
                        <p>CRM: @medico.CRM</p>
                        <p>Especialidade: @medico.Especialidade</p>

                        <div class="d-flex gap-2 flex-end">
                            <button type="button"
                                    class="btn-edit"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalEditar"
                                    data-id="@medico.Id"
                                    data-nome="@medico.Nome"
                                    data-crm="@medico.CRM"
                                    data-especialidade="@medico.Especialidade">
                                <i class="bi bi-pencil"></i>
                            </button>

                            <form asp-action="Delete" asp-route-id="@medico.Id" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este médico?');">
                                <button type="button"
                                        class="btn-delete"
                                        data-bs-toggle="modal"
                                        data-bs-target="#modalExcluir"
                                        data-id="@medico.Id"
                                        data-nome="@medico.Nome">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>

        <!-- Modal Excluir -->
        <div class="modal fade" id="modalExcluir" tabindex="-1" aria-labelledby="modalExcluirLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold" id="modalExcluirLabel">Excluir médico</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body text-center">
                        <p>Tem certeza que deseja excluir <strong id="nomeExcluir"></strong>?</p>
                        <form id="formExcluir" method="post">
                            <input type="hidden" id="idExcluir" name="id" />
                            <button type="submit" class="btn btn-danger px-4 me-2">Excluir</button>
                            <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Cadastrar -->
        <div class="modal fade" id="modalCadastrar" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold">Cadastrar médico</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" asp-action="Create">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <input type="text" name="Nome" class="form-control" placeholder="Nome completo" required />
                                </div>
                                <div class="col-md-6">
                                    <input type="email" name="Email" class="form-control" placeholder="Email" required />
                                </div>
                                <div class="col-md-6">
                                    <input type="password" name="Senha" class="form-control" placeholder="Senha" required />
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="CRM" class="form-control" placeholder="CRM" required />
                                </div>
                                <div class="col-md-12">
                                    <select name="Especialidade" class="form-select" required>
                                        <option value="">Selecione a especialidade</option>

                                        @foreach (var esp in ViewBag.Especialidades)
                                        {
                                            <option value="@esp.crm">@esp.crm</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-primary px-5 py-2">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Editar -->
        <div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold">Editar médico</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <form id="formEditar" method="post" asp-action="Edit">
                            <input type="hidden" name="Id" id="editId" />

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <input type="text" name="Nome" id="editNome" class="form-control" placeholder="Nome completo" required />
                                </div>
                                <div class="col-md-6">
                                    <input type="email" name="Email" id="editEmail" class="form-control" placeholder="Email" required />
                                </div>
                                <div class="col-md-6">
                                    <input type="password" name="Senha" id="editSenha" class="form-control" placeholder="Senha" required />
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="CRM" id="editCRM" class="form-control" placeholder="CRM" required />
                                </div>
                                <div class="col-md-12">
                                    <select name="Especialidade" id="editEspecialidade" class="form-select" required>
                                        <option value="">Selecione a especialidade</option>

                                        @foreach (var esp in ViewBag.Especialidades)
                                        {
                                            <option value="@esp.crm">@esp.crm</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-primary px-5 py-2">Salvar alterações</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Preenche o modal de edição
            const modalEditar = document.getElementById('modalEditar');
            modalEditar.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const nome = button.getAttribute('data-nome');
                const email = button.getAttribute('data-email');
                const senha = button.getAttribute('data-senha');
                const crm = button.getAttribute('data-crm');
                const especialidade = button.getAttribute('data-especialidade');

                document.getElementById('editId').value = id;
                document.getElementById('editNome').value = nome;
                document.getElementById('editEmail').value = email;
                document.getElementById('editSenha').value = senha;
                document.getElementById('editCRM').value = crm;
                document.getElementById('editEspecialidade').value = especialidade;
            });

            const modalExcluir = document.getElementById('modalExcluir');
            modalExcluir.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const nome = button.getAttribute('data-nome');

                document.getElementById('idExcluir').value = id;
                document.getElementById('nomeExcluir').textContent = nome;
                document.getElementById('formExcluir').action = `/Medico/Delete/${id}`;
            });
        </script>
    </body>
</html>
