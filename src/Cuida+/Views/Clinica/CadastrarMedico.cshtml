@model IEnumerable<Cuida_.Models.Usuarios.Medico>

    @{
    ViewData["Title"] = "Cadastrar médico";
    Layout = null;
    }

    @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
    @if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

    <!DOCTYPE html>
    <html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f5f5f5;
                padding: 30px 5% 0 5%;
                margin-left: 50px;
            }

            .nome-medico {
                text-transform: uppercase;
                font-size: 20px;
                font-weight: 600;
                margin-bottom: 15px;
                color: #0d99ff;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .card p {
                margin: 0;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .buttons-card {
                margin-top: 10px;
                border-top: 1px solid #e7e7e7;
                padding-top: 10px;
                justify-content: flex-end;
            }

            .cadastrar-medico-button {
                background-color: #0d99ff;
                border-color: #0d99ff;
            }

            .card {
                box-shadow: 1px 1px 10px -5px black !important;
            }

            h1 {
                font-weight: 600;
            }

            .bi-chevron-left {
                color: black;
                font-weight: 600;
                font-size: 30px;
            }

            .cadastrar-medico-button:hover {
                background-color: #0d99ff;
                box-shadow: 0 0 6px rgba(40, 167, 69, 0.5);
                box-shadow: none !important;
            }

            label {
                font-weight: 600;
                font-size: 15px;
                margin-bottom: 0px !important;
            }

            @@media (max-width: 768px) {
                body {
                    margin-left: 0;
                    margin-bottom: 50px;
                }
            }
        </style>
    </head>
    <body>
        @await Html.PartialAsync("_MenuPartial")
        <a id="toggleSidebar" href="/home" class="toggle-btn">
            <i class="bi bi-chevron-left"></i>
        </a>
        <div class="container-fluid p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Cadastrar médico</h1>
                <button class="btn btn-success cadastrar-medico-button" data-bs-toggle="modal" data-bs-target="#modalCadastrar">
                    <i class="bi bi-plus-lg"></i> Novo(a) médico
                </button>
            </div>

            <div class="row g-3">
                @if (!Model.Any())
    {
                <div class="col-12 text-center mt-4">
                    <div class="alert alert-info border-0 shadow-sm" role="alert"
                         style="max-width: 500px; margin: 0 auto;">
                        <i class="bi bi-info-circle me-2"></i>
                        Nenhum médico cadastrado no momento.
                    </div>
                </div>
    }
    else
    {
                @foreach (var medico in Model)
        {
                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-sm border-0 rounded-4 p-3">
                        <h3 class="nome-medico">@medico.Nome</h3>
                        <p><b>CRM:</b> @medico.CRM</p>
                        <p><b>Especialidade:</b> @medico.Especialidade</p>
                        <p><b>Email:</b> @medico.Usuario?.Email</p>

                        <div class="d-flex gap-2 buttons-card">
                            <button type="button"
                                    class="btn btn-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalEditar"
                                    data-id="@medico.Id"
                                    data-nome="@medico.Nome"
                                    data-email="@medico.Usuario?.Email"
                                    data-senha="@medico.Usuario?.Senha"
                                    data-crm="@medico.CRM"
                                    data-especialidade="@medico.Especialidade">
                                <i class="bi bi-pencil"></i>
                            </button>

                            <button type="button"
                                    class="btn btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalExcluir"
                                    data-id="@medico.Id"
                                    data-nome="@medico.Nome">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
        }
    }
            </div>
        </div>

        <!-- Modal Cadastrar -->
        <div class="modal fade" id="modalCadastrar" tabindex="-1" aria-labelledby="modalCadastrarLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold" id="modalCadastrarLabel">Cadastrar médico</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" asp-action="Create">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="Nome" class="form-label">Nome completo</label>
                                    <input type="text" id="Nome" name="Nome" class="form-control" placeholder="Digite o nome completo" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="UsuarioEmail" class="form-label">E-mail</label>
                                    <input type="email" id="UsuarioEmail" name="Usuario.Email" class="form-control" placeholder="Digite o e-mail" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="UsuarioSenha" class="form-label">Senha</label>
                                    <input type="password" id="UsuarioSenha" name="Usuario.Senha" class="form-control" placeholder="Digite a senha" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="CRM" class="form-label">CRM</label>
                                    <input type="text" id="CRM" name="CRM" class="form-control" placeholder="Digite o CRM" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="Especialidade" class="form-label">Especialidade</label>
                                    <input type="text" id="Especialidade" name="Especialidade" class="form-control" placeholder="Digite a especialidade" required />
                                </div>
                            </div>
                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-primary px-5 py-2">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Editar -->
        <div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold" id="modalEditarLabel">Editar médico</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" asp-action="Edit">
                            <input type="hidden" name="Id" id="editId" />
                            <input type="hidden" name="Usuario.Senha" id="editSenhaHidden" />
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="editNome" class="form-label">Nome completo</label>
                                    <input type="text" name="Nome" id="editNome" class="form-control" placeholder="Digite o nome completo" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="editEmail" class="form-label">E-mail</label>
                                    <input type="email" name="Usuario.Email" id="editEmail" class="form-control" placeholder="Digite o e-mail" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="editCRM" class="form-label">CRM</label>
                                    <input type="text" name="CRM" id="editCRM" class="form-control" placeholder="Digite o CRM" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="editEspecialidade" class="form-label">Especialidade</label>
                                    <input type="text" name="Especialidade" id="editEspecialidade" class="form-control" placeholder="Digite a especialidade" required />
                                </div>
                            </div>
                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-primary px-5 py-2">Salvar alterações</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Excluir -->
        <div class="modal fade" id="modalExcluir" tabindex="-1" aria-labelledby="modalExcluirLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold" id="modalExcluirLabel">Excluir médico</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                    </div>
                    <div class="modal-body text-center">
                        <p>Tem certeza que deseja excluir <strong id="nomeExcluir"></strong>?</p>
                        <form id="formExcluir" method="post" asp-action="Delete">
                            <input type="hidden" id="idExcluir" name="id" />
                            <label class="form-label d-block text-muted">Essa ação não pode ser desfeita.</label>
                            <button type="submit" class="btn btn-danger px-4 me-2">Excluir</button>
                            <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Preenche modal de edição
            const modalEditar = document.getElementById('modalEditar');
            modalEditar.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const nome = button.getAttribute('data-nome');
                const email = button.getAttribute('data-email');
                const senha = button.getAttribute('data-senha');
                const crm = button.getAttribute('data-crm');
                const especialidade = button.getAttribute('data-especialidade');

                document.getElementById('editId').value = id;
                document.getElementById('editNome').value = nome;
                document.getElementById('editEmail').value = email;
                document.getElementById('editCRM').value = crm;
                document.getElementById('editEspecialidade').value = especialidade;
                document.getElementById('editSenhaHidden').value = senha ?? "";
            });

            // Preenche modal de exclusão (POST sem /id na URL)
            const modalExcluir = document.getElementById('modalExcluir');
            modalExcluir.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const nome = button.getAttribute('data-nome');

                document.getElementById('idExcluir').value = id;
                document.getElementById('nomeExcluir').textContent = nome;
                document.getElementById('formExcluir').action = '/Clinica/Delete';
            });
        </script>
    </body>
</html>
