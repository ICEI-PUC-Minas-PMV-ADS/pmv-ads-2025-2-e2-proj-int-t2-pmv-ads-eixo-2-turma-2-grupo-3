@model IEnumerable<Cuida_.Models.Campanha>
@await Html.PartialAsync("_MenuPartial")

@{
    ViewData["Title"] = "Campanhas";
    var canCreate = ViewBag.CanCreate as bool? ?? false;
    var isMedico = ViewBag.IsMedico as bool? ?? false;
    var currentMedicoId = ViewBag.CurrentMedicoId as int? ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Campanhas</h2>
        @if (canCreate)
        {
            <a asp-action="Create" class="btn btn-success px-4 py-2 fw-semibold">
                <i class="bi bi-plus-lg"></i> Nova campanha
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            Nenhuma campanha cadastrada no momento.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                var jaAderiu = false;
                if (isMedico && item.Medicos != null)
                {
                    jaAderiu = item.Medicos.Any(m => m.Id == currentMedicoId);
                }

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-4 h-100">
                        <div class="card-body d-flex flex-column justify-content-between">

                            <div>
                                <h5 class="card-title text-primary fw-bold mb-2">@item.NomeCampanha</h5>
                                <p>
                                    <strong>Status:</strong>
                                    @Html.Raw(item.Ativa 
                                        ? "<span class='badge bg-success'>Ativa</span>" 
                                        : "<span class='badge bg-secondary'>Inativa</span>")
                                </p>
                   </div>

                            <div class="mt-3 d-flex justify-content-end gap-2">

                                @* Botões padrão para editar/visualizar/excluir (apenas clínicas conseguem editar/excluir, mas isso já é validado no servidor) *@
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id" title="Visualizar">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>

                                @* Botão de Aderir (apenas para médicos e quando ainda não aderiu) *@
                                @if (isMedico)
                                {
                                    if (!jaAderiu)
                                    {
                                        <form asp-action="Aderir" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Aderir à campanha">
                                                <i class="bi bi-person-plus"></i> Aderir
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-sm btn-secondary" disabled title="Já aderiu">
                                            <i class="bi bi-person-check"></i> Aderido
                                        </button>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>