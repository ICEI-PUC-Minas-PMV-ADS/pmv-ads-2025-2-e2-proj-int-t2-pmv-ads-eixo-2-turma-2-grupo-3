@model Cuida_.Models.campanhas.Campanha
@await Html.PartialAsync("_MenuPartial")

@{
    ViewData["Title"] = "Excluir campanha";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-lg border-0 rounded-4 p-4">
                <div class="card-body d-flex flex-column justify-content-between">

                    <div class="text-center mb-4">
                        <h2 class="text-danger fw-bold mb-2">Excluir campanha</h2>
                        <p class="text-muted fs-5">Tem certeza que deseja excluir esta campanha?</p>
                    </div>

                    <div class="card shadow-sm border-0 rounded-3 mb-4 p-3 bg-light">
                        <h5 class="card-title text-primary fw-bold mb-2">
                            @Html.DisplayFor(model => model.NomeCampanha)
                        </h5>
                        <p class="text-muted mb-3">
                            @Html.DisplayFor(model => model.Descricao)
                        </p>
                        <p class="mb-0">
                            <strong>Status:</strong>
                            @Html.Raw(Model.Ativa
                                ? "<span class='badge bg-success'>Ativa</span>"
                                : "<span class='badge bg-secondary'>Inativa</span>")
                        </p>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-3">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-semibold">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger px-4 py-2 fw-semibold">
                                Excluir
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
